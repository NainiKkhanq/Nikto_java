<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.offerwallsfrag">


    <RelativeLayout
        android:id="@+id/timermenue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="#0082F3">

        <ImageView
            android:id="@+id/clockimg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/hourglass"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/clockimg"
            android:paddingLeft="@dimen/_10sdp"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CLOSEAD"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Close"
            android:visibility="gone"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            android:elevation="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:background="#FFC107"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="#000000"

            android:textStyle="bold"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/timermenue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <WebView
            android:id="@+id/WebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>