<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Fragments.VideoTasksFrag">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.CategoryFrag">


        <View
            android:id="@+id/menue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/recycler_design" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="@dimen/_10sdp"

        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/recyclerview_cashdesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wllet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Your Wallet"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/coinnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wllet"

            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Coins:"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/UserCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wllet"
            android:layout_toRightOf="@id/coinnm"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


        <TextView
            android:id="@+id/WithdrawNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserCoins"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:paddingLeft="@dimen/_4sdp"

            android:textColor="#FF0000"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/MainRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/options"
        android:background="@color/white">


        <TextView
            android:id="@+id/wtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_6sdp"
            android:gravity="center"
            android:text="Watch Now"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/UintyAdBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_below="@+id/wtext"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/unityaddesign"
            android:elevation="@dimen/_6sdp">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/playbtn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Task 1"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/AdmobAdBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_below="@+id/UintyAdBtn"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/admob"
            android:elevation="@dimen/_6sdp">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/playbtn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Task 2"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>

</ScrollView>